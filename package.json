{
  "name": "code-exercise",
  "version": "1.0.0",
  "description": "This is a shopping cart coding exercise",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:express": "nodemon ./index.js",
    "sass:compile": "sass ./assets/sass/main.scss ./static/css/style.css",
    "sass:watch": "sass ./assets/sass/main.scss ./static/css/style.css -w",
    "js:build": "cross-env NODE_ENV=production webpack",
    "js:watch": "cross-env NODE_ENV=production WATCH=true webpack",
    "dev": "npm-run-all -p watch:express sass:watch js:watch",
    "build": "npm-run-all -p sass:compile js:build",
    "start:server": "node ./index.js",
    "start": "npm-run-all build start:server"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "canned": "^0.3.12",
    "dompurify": "^2.3.6",
    "express": "^4.17.3",
    "express-handlebars": "^6.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.4",
    "babel-preset-minify": "^0.5.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "sass": "^1.50.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
